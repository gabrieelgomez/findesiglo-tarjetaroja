<% content_for :page_title do %>
  <%= I18n.t(:variants_sales_report) %> - <%= @product.name %>
<% end %>

<div class="row">
  <div class="col-12">
    <!-- Enlace para volver al producto -->
    <div class="mb-4">
      <%= link_to spree.edit_admin_product_path(@product), class: 'btn btn-outline-secondary' do %>
        <%= icon 'arrow-left' %>
        <%= I18n.t(:back_to_product) %>
      <% end %>
    </div>

    <!-- Filtros de fecha -->
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <%= icon 'calendar' %>
          <%= I18n.t(:filters) %>
        </h5>
      </div>
      <div class="card-body">
        <%= form_with url: spree.admin_product_product_variants_sales_path(@product), method: :get, local: true, class: 'row g-3' do |form| %>
          <div class="col-md-4">
            <%= form.label :start_date, I18n.t(:start_date), class: 'form-label' %>
            <%= form.date_field :start_date, value: @start_date, class: 'form-control' %>
          </div>
          <div class="col-md-4">
            <%= form.label :end_date, I18n.t(:end_date), class: 'form-label' %>
            <%= form.date_field :end_date, value: @end_date, class: 'form-control' %>
          </div>
          <div class="col-md-4 d-flex align-items-end">
            <%= form.submit I18n.t(:filter), class: 'btn btn-primary me-2' %>
            <%= link_to I18n.t(:reset), spree.admin_product_product_variants_sales_path(@product), class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Resumen de estadÃ­sticas -->
    <div class="row mb-4">
      <div class="col-md-6">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-primary">
              <%= icon 'box' %>
              <%= @summary_stats[:total_units_sold] %>
            </h5>
            <p class="card-text"><%= I18n.t(:total_units_sold) %></p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-info">
              <%= icon 'list' %>
              <%= @summary_stats[:variants_count] %>
            </h5>
            <p class="card-text"><%= I18n.t(:total_variants) %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabla de variantes vendidas -->
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <%= icon 'chart-bar' %>
          <%= I18n.t(:variants_sales_ranking) %>
        </h5>
      </div>
      <div class="card-body">
        <% if @variants_sales.any? %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th class="text-center">#</th>
                  <th><%= I18n.t(:variant) %></th>
                  <th class="text-center"><%= I18n.t(:quantity_sold) %></th>
                  <th class="text-center"><%= I18n.t(:actions) %></th>
                </tr>
              </thead>
              <tbody>
                <% @variants_sales.each_with_index do |variant, index| %>
                  <tr>
                    <td class="text-center">
                      <span class="badge bg-<%= index < 3 ? 'warning' : 'secondary' %>">
                        <%= index + 1 %>
                      </span>
                    </td>
                    <td>
                      <div class="d-flex align-items-center">
                        <% if variant.images.any? %>
                          <%= image_tag variant.images.first.url(:mini), class: 'me-2', style: 'width: 40px; height: 40px; object-fit: cover; border-radius: 4px;' %>
                        <% end %>
                        <div>
                          <strong><%= @product.name %></strong>
                          <br>
                          <small class="text-muted"><%= translate_variant_options(variant.options_text) %></small>
                        </div>
                      </div>
                    </td>

                    <td class="text-center">
                      <strong class="text-primary fs-5"><%= variant.total_quantity.to_i %></strong>
                    </td>
                    <td class="text-center">
                      <%= link_to spree.edit_admin_product_variant_path(@product, variant), class: 'btn btn-sm btn-outline-primary' do %>
                        <%= icon 'pencil' %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <%= icon 'inbox', class: 'text-muted', style: 'font-size: 3rem;' %>
            <h5 class="mt-3 text-muted"><%= I18n.t(:no_sales_for_this_product) %></h5>
            <p class="text-muted"><%= I18n.t(:no_sales_for_this_product_description) %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
