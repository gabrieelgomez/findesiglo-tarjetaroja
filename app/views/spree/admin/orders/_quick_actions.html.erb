<% if (!@order.completed? || !@order.shipped?) && can?(:update, @order)%>
  <div class="card mb-3">
    <div class="card-body">
      <div class="d-flex align-items-center justify-content-between">
        <div>
          <h6 class="card-title mb-1">
            <i class="fas fa-tasks text-primary me-2"></i>
            <%= Spree.t(:order_actions) %>
          </h6>
          <p class="card-text text-muted mb-0">
            <% if !@order.completed? %>
              <%= Spree.t(:mark_order_as_completed_description) %>
            <% elsif !@order.shipped? %>
              <%= Spree.t(:mark_order_as_shipped_description) %>
            <% end %>
          </p>
        </div>
        <div class="d-flex gap-2">
            <%= link_to spree.mark_as_completed_admin_order_path(@order),
                class: "btn btn-primary d-flex align-items-center gap-2",
                data: { 
                  turbo_method: :post, 
                  turbo_confirm: Spree.t(:are_you_sure_mark_as_completed) 
                } do %>
              <i class="fas fa-check"></i>
              <%= Spree.t(:mark_as_completed) %>
            <% end %>
          
        </div>
      </div>
    </div>
  </div>
<% end %> 