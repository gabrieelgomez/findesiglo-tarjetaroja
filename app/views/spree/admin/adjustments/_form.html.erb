<div class="card mb-4">
  <div class="card-header">
    <h5 class="card-title">
      <%= Spree.t(:adjustment_details) %>
    </h5>
  </div>

  <div class="card-body">
    <div class="form-group">
      <%= f.label :amount, Spree.t(:amount) %>
      <%= f.number_field :amount, class: 'form-control', step: 0.01, required: true, autofocus: f.object.new_record? %>
      <%= f.error_message_on :amount %>
      <small class="form-text text-muted">
        <%= Spree.t(:adjustment_amount_explanation) %>
      </small>
    </div>

    <div class="form-group">
      <%= f.label :label, Spree.t(:description) %>
      <%= f.text_field :label, class: 'form-control', required: true %>
      <%= f.error_message_on :label %>
      <small class="form-text text-muted">
        <%= Spree.t(:adjustment_description_explanation) %>
      </small>
    </div>
  </div>
</div> 