
<% content_for :page_title do %>
  <%= page_header_back_button spree.admin_order_adjustments_path(@order) %>
  <%= Spree.t(:new_adjustment) %>
<% end %>

<%= form_for [:admin, @order, @adjustment] do |f| %>
  <div class="row">
    <div class="col-lg-6 offset-lg-3">
      <%= render partial: 'spree/admin/shared/error_messages', locals: { target: @adjustment } %>
      <%= render 'form', f: f %>
      <%= render 'spree/admin/shared/new_resource_links' %>
    </div>
  </div>
<% end %> 