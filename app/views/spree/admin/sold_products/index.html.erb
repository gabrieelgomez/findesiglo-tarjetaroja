<% content_for :page_title do %>
  <%= I18n.t(:sold_products) %>
<% end %>

<div class="row">
  <div class="col-12">
    <!-- Filtros de fecha -->
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <%= icon 'calendar' %>
          <%= I18n.t(:filters) %>
        </h5>
      </div>
      <div class="card-body">
        <%= form_with url: spree.admin_sold_products_path, method: :get, local: true, class: 'row g-3' do |form| %>
          <div class="col-md-4">
            <%= form.label :start_date, I18n.t(:start_date), class: 'form-label' %>
            <%= form.date_field :start_date, value: @start_date, class: 'form-control' %>
          </div>
          <div class="col-md-4">
            <%= form.label :end_date, I18n.t(:end_date), class: 'form-label' %>
            <%= form.date_field :end_date, value: @end_date, class: 'form-control' %>
          </div>
          <div class="col-md-4 d-flex align-items-end">
            <%= form.submit I18n.t(:filter), class: 'btn btn-primary me-2' %>
            <%= link_to I18n.t(:reset), spree.admin_sold_products_path, class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Resumen de estadÃ­sticas -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-primary">
              <%= icon 'box' %>
              <%= @summary_stats[:total_products_sold] %>
            </h5>
            <p class="card-text"><%= I18n.t(:total_products_sold) %></p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-success">
              <%= icon 'currency-dollar' %>
              <%= Spree::Money.new(@summary_stats[:total_sales_value], currency: Spree::Config.currency) %>
            </h5>
            <p class="card-text"><%= I18n.t(:total_sales_value) %></p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-info">
              <%= icon 'calculator' %>
              <%= Spree::Money.new(@summary_stats[:total_cost_value], currency: Spree::Config.currency) %>
            </h5>
            <p class="card-text"><%= I18n.t(:total_cost_value) %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabla de productos vendidos -->
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <%= icon 'list' %>
          <%= I18n.t(:sold_products_list) %>
        </h5>
      </div>
      <div class="card-body">
        <% if @sold_products.any? %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="">
                <tr>
                  <th><%= I18n.t(:product) %></th>
                  <th><%= I18n.t(:quantity) %></th>
                  <th><%= I18n.t(:sale_price) %></th>
                  <th><%= I18n.t(:cost_price) %></th>
                  <th><%= I18n.t(:order) %></th>
                  <th><%= I18n.t(:payment_date) %></th>
                </tr>
              </thead>
              <tbody>
                <% @sold_products.each do |line_item| %>
                  <tr>
                    <td>
                      <%= link_to spree.edit_admin_product_variant_path(line_item.product, line_item.variant), class: "d-flex align-items-center text-decoration-none" do %>
                        <% if line_item.variant.images.any? %>
                          <%= image_tag line_item.variant.images.first.url(:mini), class: 'me-2', style: 'width: 40px; height: 40px; object-fit: cover;' %>
                        <% end %>
                        <div>
                          <strong><%= line_item.product.name %></strong>
                          <br>
                          <%= translate_variant_options(line_item.variant.options_text) %>
                          <br>
                          <small class="text-muted"><%= I18n.t(:sku) %>: <%= line_item.variant.sku %></small>
                        </div>
                      <% end %>
                    </td>
                    <td>
                      <span class="badge"><%= line_item.quantity %></span>
                    </td>
                    <td>
                      <strong class="text-success"><%= Spree::Money.new(line_item.price, currency: Spree::Config.currency) %></strong>
                    </td>
                    <td>
                      <span class="text-info"><%= Spree::Money.new(line_item.cost_price || 0, currency: Spree::Config.currency) %></span>
                    </td>
                    <td>
                      <div class="d-flex justify-content-center">
                        <% if line_item.order.user %>
                          <%= line_item.order.user.email %>
                        <% else %>
                          <span class="text-muted"><%= I18n.t(:guest) %></span>
                        <% end %>
                      </div>

                      <br>

                      <div class="d-flex justify-content-center">
                        <%= link_to "##{line_item.order.number}", spree.edit_admin_order_path(line_item.order), class: 'btn btn-sm btn-outline-primary' %>
                      </div>
                    </td>
                    <td>
                      <small><%= line_item.order.payments.completed.last&.updated_at&.strftime('%d/%m/%Y %H:%M') %></small>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-5">
            <%= icon 'inbox', class: 'text-muted', style: 'font-size: 3rem;' %>
            <h5 class="mt-3 text-muted"><%= I18n.t(:no_sold_products) %></h5>
            <p class="text-muted"><%= I18n.t(:no_sold_products_description) %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
