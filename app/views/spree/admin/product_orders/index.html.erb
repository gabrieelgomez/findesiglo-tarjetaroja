<% content_for :page_title do %>
  <%= I18n.t(:product_orders) %> - <%= @product.name %>
<% end %>

<div class="row">
  <div class="col-12">
    <!-- Enlace para volver al producto -->
    <div class="mb-4">
      <%= link_to spree.edit_admin_product_path(@product), class: 'btn btn-outline-secondary' do %>
        <%= icon 'arrow-left' %>
        <%= I18n.t(:back_to_product) %>
      <% end %>
    </div>

    <!-- Filtros de fecha y paginación -->
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <%= icon 'calendar' %>
          <%= I18n.t(:filters) %>
        </h5>
      </div>
      <div class="card-body">
        <%= form_with url: spree.admin_product_product_orders_path(@product), method: :get, local: true, class: 'row g-3' do |form| %>
          <div class="col-md-3">
            <%= form.label :start_date, I18n.t(:start_date), class: 'form-label' %>
            <%= form.date_field :start_date, value: @start_date, class: 'form-control' %>
          </div>
          <div class="col-md-3">
            <%= form.label :end_date, I18n.t(:end_date), class: 'form-label' %>
            <%= form.date_field :end_date, value: @end_date, class: 'form-control' %>
          </div>
          <div class="col-md-3">
            <%= form.label :per_page, I18n.t(:per_page), class: 'form-label' %>
            <%= form.select :per_page, [[10, 10], [25, 25], [50, 50], [100, 100]], { selected: @per_page }, class: 'form-select' %>
          </div>
          <div class="col-md-3 d-flex align-items-end">
            <%= form.submit I18n.t(:filter), class: 'btn btn-primary me-2' %>
            <%= link_to I18n.t(:reset), spree.admin_product_product_orders_path(@product), class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Resumen de estadísticas -->
    <div class="row mb-4">
      <div class="col-md-6">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-primary">
              <%= icon 'shopping-cart' %>
              <%= @summary_stats[:total_orders] %>
            </h5>
            <p class="card-text"><%= I18n.t(:total_orders) %></p>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card text-center">
          <div class="card-body">
            <h5 class="card-title text-info">
              <%= icon 'box' %>
              <%= @summary_stats[:total_units_sold] %>
            </h5>
            <p class="card-text"><%= I18n.t(:total_units_sold) %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabla de órdenes -->
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
          <%= icon 'list' %>
          <%= I18n.t(:orders_list) %>
        </h5>
        <% if @orders.any? %>
          <span class="text-muted">
            <%= I18n.t(:showing) %> <%= @orders.offset_value + 1 %>-<%= [@orders.offset_value + @orders.length, @orders.total_count].min %> <%= I18n.t(:of) %> <%= @orders.total_count %>
          </span>
        <% end %>
      </div>
      <div class="card-body">
        <% if @orders.any? %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead>
                <tr>
                  <th><%= I18n.t(:order) %></th>
                  <th><%= I18n.t(:customer) %></th>
                  <th><%= I18n.t(:variants_purchased) %></th>
                  <th class="text-center"><%= I18n.t(:quantity) %></th>
                  <th><%= I18n.t(:date) %></th>
                  <th><%= I18n.t(:state) %></th>
                  <th class="text-center"><%= I18n.t(:actions) %></th>
                </tr>
              </thead>
              <tbody>
                <% @orders.each do |order| %>
                  <% product_line_items = order.line_items.select { |li| li.variant.product_id == @product.id } %>
                  <tr>
                    <td>
                      <%= link_to "##{order.number}", spree.edit_admin_order_path(order), class: 'fw-bold text-decoration-none' %>
                    </td>
                    <td>
                      <% if order.user %>
                        <%= order.user.email %>
                      <% else %>
                        <span class="text-muted"><%= I18n.t(:guest) %></span>
                      <% end %>
                    </td>
                    <td>
                      <% product_line_items.each do |li| %>
                        <div class="small">
                          <%= translate_variant_options(li.variant.options_text) %>
                        </div>
                      <% end %>
                    </td>
                    <td class="text-center">
                      <strong class="text-primary"><%= product_line_items.sum(&:quantity) %></strong>
                    </td>
                    <td>
                      <small><%= order.completed_at&.strftime('%d/%m/%Y %H:%M') %></small>
                    </td>
                    <td>
                      <span class="badge bg-<%= order_state_badge_class(order.state) %>">
                        <%= I18n.t("spree.order_state.#{order.state}", default: order.state.humanize) %>
                      </span>
                    </td>
                    <td class="text-center">
                      <%= link_to spree.edit_admin_order_path(order), class: 'btn btn-sm btn-outline-primary' do %>
                        <%= icon 'eye' %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>

          <!-- Paginación -->
          <div class="d-flex justify-content-center mt-4">
            <%= paginate @orders, params: { start_date: @start_date, end_date: @end_date, per_page: @per_page } %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <%= icon 'inbox', class: 'text-muted', style: 'font-size: 3rem;' %>
            <h5 class="mt-3 text-muted"><%= I18n.t(:no_orders_for_this_product) %></h5>
            <p class="text-muted"><%= I18n.t(:no_orders_for_this_product_description) %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
