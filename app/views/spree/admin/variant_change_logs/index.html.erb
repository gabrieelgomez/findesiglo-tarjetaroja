<% content_for :page_title do %>
  Historial de cambios de stock
<% end %>

<div class="row">
  <div class="col-12">
    <!-- Filtros -->
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="card-title mb-0">
          <%= icon 'filter' %>
          Filtros
        </h5>
      </div>
      <div class="card-body">
        <%= form_with url: spree.admin_variant_change_logs_path, method: :get, local: true, class: 'row g-3' do |form| %>
          <div class="col-md-2">
            <%= form.label :per_page, 'Por página', class: 'form-label' %>
            <%= form.select :per_page, [[10, 10], [25, 25], [50, 50], [100, 100]], { selected: params[:per_page].presence || 25 }, class: 'form-select' %>
          </div>
          <div class="col-md-2">
            <%= form.label :source, 'Origen', class: 'form-label' %>
            <%= form.select :source, [['Edición de variante', 'variant_edit'], ['Edición de producto', 'product_edit']], { selected: params[:source], include_blank: 'Todos' }, class: 'form-select' %>
          </div>
          <div class="col-md-2">
            <%= form.label :since, 'Desde fecha', class: 'form-label' %>
            <%= form.datetime_local_field :since, value: params[:since], class: 'form-control' %>
          </div>
          <div class="col-md-2 d-flex align-items-end">
            <%= form.submit 'Filtrar', class: 'btn btn-primary me-2' %>
            <%= link_to 'Restablecer', spree.admin_variant_change_logs_path, class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Tabla de historial -->
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="card-title mb-0">
          <%= icon 'history' %>
          Historial de cambios de stock
        </h5>
        <span class="text-muted">
          <%= @change_logs.offset_value + 1 %>-<%= [@change_logs.offset_value + @change_logs.length, @change_logs.total_count].min %> de <%= @change_logs.total_count %>
        </span>
      </div>
      <div class="card-body p-0">
        <% if @change_logs.any? %>
          <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
              <thead>
                <tr>
                  <th>Fecha / Hora</th>
                  <th>Usuario</th>
                  <th>Producto</th>
                  <th>Variante</th>
                  <th>Campo</th>
                  <th>De → A</th>
                  <th>Origen</th>
                </tr>
              </thead>
              <tbody>
                <% @change_logs.each do |log| %>
                  <tr>
                    <td class="text-nowrap">
                      <small><%= log.created_at.strftime("%d/%m/%Y %H:%M") %></small>
                    </td>
                    <td>
                      <%= log.admin_user&.email || "Usuario ##{log.admin_user_id}" %>
                    </td>
                    <td>
                      <% if log.product %>
                        <%= link_to log.product_name, spree.edit_admin_product_path(log.product), class: 'text-decoration-none' %>
                      <% else %>
                        <%= log.product_name %>
                      <% end %>
                    </td>
                    <td>
                      <% if log.variant && log.product %>
                        <%= link_to log.variant_name, spree.edit_admin_product_variant_path(log.product, log.variant), class: 'text-decoration-none' %>
                      <% else %>
                        <%= log.variant_name %>
                      <% end %>
                    </td>
                    <td><%= log.field_label %></td>
                    <td>
                      <span class="text-muted"><%= log.old_value.blank? ? '—' : log.old_value %></span>
                      →
                      <span><%= log.new_value.blank? ? '—' : log.new_value %></span>
                    </td>
                    <td>
                      <% if log.source == 'variant_edit' %>
                        <span class="badge bg-info">Edición variante</span>
                      <% else %>
                        <span class="badge bg-secondary">Edición producto</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <div class="p-3 border-top">
            <%= paginate @change_logs, params: params.permit(:per_page, :source, :since, :user_id, :product_id, :variant_id).to_h %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <%= icon 'inbox', class: 'text-muted', style: 'font-size: 3rem;' %>
            <h5 class="mt-3 text-muted">No hay registros de cambios de stock</h5>
            <p class="text-muted">Los cambios en cantidad en stock o "permitir pedido pendiente" de variantes aparecerán aquí.</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
